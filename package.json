{
  "name": "full-stack-skeleton",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,scss}\"",
    "commit": "./scripts/commit.sh",
    "dev:web": "vite apps/web",
    "dev:api": "pnpm --filter api dev",
    "build:web": "tsc && vite build apps/web",
    "build:api": "pnpm --filter api build",
    "preview": "vite preview apps/web",
    "test:verify": "bash ./scripts/verify-structure.sh",
    "test:web": "vitest run -r apps/web",
    "test:api": "pnpm --filter api test",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage -r apps/web",
    "test:watch": "vitest -r apps/web",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "lint:api": "pnpm --filter api lint",
    "lint:web": "pnpm --filter web lint",
    "predeploy": "pnpm build",
    "deploy": "gh-pages -d dist",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "storybook": "cross-env NODE_ENV=development storybook dev -p 6006",
    "storybook:build": "cross-env NODE_ENV=production storybook build",
    "storybook:clean": "rm -rf node_modules/.cache/storybook",
    "storybook:dev": "pnpm storybook:clean && pnpm storybook",
    "chromatic": "chromatic --exit-zero-on-changes"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.scss": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@storybook/addon-essentials": "^8.4.2",
    "@storybook/addon-links": "^8.4.2",
    "@storybook/addon-themes": "^8.4.2",
    "@storybook/blocks": "^8.4.2",
    "@storybook/builder-vite": "^8.4.2",
    "@storybook/react": "^8.4.2",
    "@storybook/react-vite": "^8.4.2",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "^2.1.4",
    "autoprefixer": "^10.4.20",
    "chromatic": "^11.16.3",
    "cross-env": "^7.0.3",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "eslint-plugin-storybook": "^0.11.0",
    "happy-dom": "^15.11.0",
    "husky": "^9.1.6",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "sass": "^1.80.6",
    "sass-loader": "^16.0.3",
    "storybook": "^8.4.2",
    "typescript": "^5.6.3",
    "typescript-plugin-css-modules": "^5.1.0",
    "vite": "^5.4.10",
    "vitest": "^2.1.4"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
